// Script used in WF, run script activity

var gr = new GlideRecord('sc_request');
var req=current.variables.select_request.request; //Variable referenced to RITM table
var requester=current.variables.new_requester; //Variable referenced to user table. Set this user as new user in "requested for"
gr.addQuery('sys_id', req);
gr.query();

if (gr.next()) {
    gr.requested_for=requester;
	gr.update();
}
